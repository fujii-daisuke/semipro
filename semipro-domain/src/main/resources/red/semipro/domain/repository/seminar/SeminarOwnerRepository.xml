<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
    namespace="red.semipro.domain.repository.seminar.SeminarOwnerRepository">
    
    <resultMap id="seminarOwnerResultMap" type="red.semipro.domain.model.SeminarOwner">
        <result property="id" column="id" />
        <result property="seminarId" column="seminar_id" />
        <result property="accountId" column="account_id" />
        <result property="providerOwnerId" column="provider_owner_id" />
        <result property="name" column="name" />
        <result property="url" column="url" />
    </resultMap>

    <select id="findAll" resultMap="seminarOwnerResultMap">
        select
            id,
            seminar_id,
            account_id,
            provider_owner_id,
            name,
            url
        from seminar_owner
        where
            seminar_id = #{seminarId}
        order by id
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into seminar_owner (
            seminar_id,
            account_id,
            provider_owner_id,
            name,
            url,
            created_at,
            updated_at
            )
        values
            <foreach item="i" collection="owners" separator=",">
                (#{i.seminarId}, #{i.accountId}, #{i.providerOwnerId}, #{i.name}, #{i.url}, current_timestamp, current_timestamp)
            </foreach>
    </insert>
    
    <delete id="delete">
        delete from seminar_owner
            where
                seminar_id = #{seminarId}
    </delete>
    
</mapper>