<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
    namespace="red.semipro.domain.repository.seminar.SeminarPaymentTypeRepository">
    
    <resultMap id="seminarPaymentTypeResultMap" type="red.semipro.domain.model.SeminarPaymentType">
        <result property="id" column="id" />
        <result property="seminarId" column="seminar_id" />
        <result property="paymentType" column="payment_type" />
    </resultMap>

    <select id="findAll" resultMap="seminarPaymentTypeResultMap">
        select
            id,
            seminar_id,
            payment_type
        from seminar_payment_type
        where
            seminar_id = #{seminarId}
        order by payment_type
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into seminar_payment_type (
            seminar_id,
            payment_type,
            created_at,
            updated_at
            )
        values
            <foreach item="i" collection="paymentTypes" separator=",">
                (#{i.seminarId}, #{i.paymentType.value}, current_timestamp, current_timestamp)
            </foreach>
    </insert>
    
    <delete id="delete">
        delete from seminar_payment_type
            where
                seminar_id = #{seminarId}
    </delete>
    
</mapper>